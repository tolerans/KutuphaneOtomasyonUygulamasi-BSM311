            @Html.DisplayFor(modelItem => item.Ogrenciler.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OduncAlinmaTarihi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeslimEdilmeTarihi)
        </td>
        <td>
