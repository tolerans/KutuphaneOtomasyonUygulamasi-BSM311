<p>
    @Html.ActionLink("Ödünç Ver", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kitaplar.KitapAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ogrenciler.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OduncAlinmaTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeslimEdilmeTarihi)
        </th>
        <th></th>
